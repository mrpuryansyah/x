<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <solid android:color="#AAffb007"/>
        </shape>
    </item>
    <item android:state_focused="true"> <!-- focused -->
        <shape>
            <solid android:color="#AAffb007"/>
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- disabled -->
        <shape>
            <solid android:color="@android:color/darker_gray"/>
        </shape>
    </item>
    <item> <!-- default -->
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke android:color="#ffb848"
                android:width="1dp"/>
        </shape>
    </item>
</selector>