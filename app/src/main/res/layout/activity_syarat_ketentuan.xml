<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.form.pengajuanktpel.ActivitySyaratKetentuan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/llpersyaratan">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffb848"
            android:padding="5dp"
            android:text="Prosedur"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlsatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text="1."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvsatu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/q"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Input :\n1.NIK Pemohon\n2.Nama Lengkap\n3.Kecamatan\n4.Keterangan\n5.Upload File Pendukung Seperti : \nJika Hilang Foto surat kehilangan dari kantor polisi,jika rusak foto kondisi fisik ktp yang rusak Format Harus .jpg Apabila terdapat kesalahan ketika input,harap cek kembali Data Anda. data yang sudah tersimpan tidak dapat di hapus. Lalu Simpan"
                android:textColor="@color/black" />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rldua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text="2."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/w"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Persyaratan Pengajuan KTP-el yang hilang/rusak,lampirkan foto persyaratan kedalam aplikasi,apabila hilang foto bukti kehilangan dari kantor polisi,apabila rusak fotokan kondisi fisik KTP-el,CETAK KTP-EL Tanpa Perubahan Data."
                android:textColor="@color/black" />

        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rltiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text="3."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/e"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Pelaporan tidak dapat diwakilkan, harap menggunakan NIK dan Nama Sesuai KTP-el."
                android:textColor="@color/black" />

        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text="4."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/r"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Jika tidak ada kendala, dokumen dapat diambil di kantor Kecamatan dalam 14 hari kerja dan pengambilan tidak dapat diwakilkan."
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>